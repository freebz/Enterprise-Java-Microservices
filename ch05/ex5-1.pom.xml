<!-- 예제 5-1 오픈시프트 전개를 위한 메이븐 프로파일 -->

<profile>
  <id>openshift</id>
  <build>
    <plugins>
      <plugin>
	<groupId>io.fabric8</groupId>
	<artifactId>fabric8-maven-plugin</artifactId>
	<version>3.5.33</version>
	<executions>
	  <execution>
	    <goals>
	      <goal>resource</goal>
	      <goal>build</goal>
	    </goals>
	  </execution>
	</executions>
      </plugin>
    </plugins>
  </build>
</profile>
